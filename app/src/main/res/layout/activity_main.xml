<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_gradient_splash">


    //setare culoare

    //logo


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/app_logo"
        android:transitionName="logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>



    <ImageView
        android:id="@+id/textV"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/safeparktxt"
        android:transitionName="imageV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"/>


    <TextView
        android:id="@+id/sloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif"
        android:includeFontPadding="true"
        android:text="Parchează în siguranță!"
        android:textAlignment="center"
        android:textColor="#803C82BA"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textV" />



    <Button
        android:id="@+id/homeBtn"
        android:layout_width="42dp"
        android:layout_height="27dp"
        app:layout_constraintTop_toBottomOf="@id/googleAuth"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="SH"
        android:textSize="6dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/google_signin"
        app:layout_constraintTop_toBottomOf="@id/sloganText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="180dp"
        android:id="@+id/googleAuth"/>





</androidx.constraintlayout.widget.ConstraintLayout>